<% provide(:title, 'View Tasks') %>
<h1>Active Tasks</h1>

<%table_headers = ['Title','Description','Project','Edit','Archive'] %>
<%table_contents =@tasks.map { |task| [[task.name, task],[task.description],[task.project.title, task.project],['Edit', edit_task_path(task)],['Archive',archive_task_path(task), :patch]]}%>
<%empty_message = 'No Tasks have been created yet.' %>
<%= render partial: 'shared/display_table', locals: {table_headers: table_headers, table_contents: table_contents,empty_message: empty_message} %>
<br/>
<%= link_to 'New task', new_task_path, class: 'btn btn-small btn-primary', style: 'width:180px;'%>
<%= link_to 'View Archived Tasks', index_archived_tasks_path, class: 'btn btn-small btn-primary',  style: 'width:180px;' %>