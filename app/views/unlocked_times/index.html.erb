<h1>Listing unlocked times</h1>

<div class="container">
  <div class="row">
    
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th class="col-md-3">Start time</th>
          <th class="col-md-3">End time</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </table>

    <% @unlocked_times.each do |unlocked_time| %>          
        <%= form_for(unlocked_time) do |f| %>
        <table class="table table-bordered table-hover table-condensed">
          <tr>
            <td class="col-md-3"><%= f.date_select :start_time %></td>
            <td class="col-md-3"><%= f.date_select :end_time %></td>            
            <td><%= f.submit "Update", {class: "btn btn-primary btn-sm"} %></td>
            <td><%= link_to 'Destroy', unlocked_time, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>      
          </tr>            
        </table>
        <% end %>                
    <% end %>                

    <%= link_to 'New Unlocked time', new_unlocked_time_path %>
  </div>
</div>