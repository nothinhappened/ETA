<% provide(:title, 'Edit User') %>
<h1>Edit User</h1>

<div class="row">
    <div class="div6 offset3 form-signin">
        <%= form_for @user, url: admin_update_user_path(@user)  do |f| %>
            <%= render 'shared/error_messages',  object: f.object%><br/>
            <%= f.label :first_name, style: 'width: 90px;' %>
            <%= f.text_field :first_name, placeholder: 'First Name', style: 'width: 195px;' %><br/>
            <%= f.label :last_name, style: 'width: 90px;' %>
            <%= f.text_field :last_name, placeholder: 'Last Name', style: 'width: 195px;' %><br/>
            <%= f.label :email, style: 'width: 90px;' %>
            <%= f.text_field :email, placeholder: 'Email', style: 'width: 195px;' %><br/>
            <%= f.label :user_type, style: 'width: 90px;' %>
            <%= f.select( :user_type, User.user_types.map.with_index{|user_type,i| [user_type,i]}, style: 'width: 195px;') %><br/>
            <%= f.label :password, style: 'width: 90px;' %>
            <%= f.password_field :password , placeholder: 'Password', style: 'width: 195px;'%><br/>
            <%= f.label :confirm, style: 'width: 90px;' %>
            <%= f.password_field :password_confirmation , placeholder: 'Confirm Password', style: 'width: 195px;'%>
            <br>
            <%= f.submit %>
        <% end %>
    </div>
</div>
