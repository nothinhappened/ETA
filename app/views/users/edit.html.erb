<% provide(:title,"Update Profile") %>
<h1>Update Profile Information</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages',object: f.object %>

			<%= f.label :first_name %><br>
			<%= f.text_field :first_name, value: @user.first_name %>
			<br>

			<%= f.label :last_name %><br>
			<%= f.text_field :last_name, value: @user.last_name %>
			<br>

			<%= f.label :email %><br>
			<%= f.text_field :email, value: @user.email %>
			<br>

			<%= f.label :password %><br>
			<%= f.password_field :password %>
			<br>

			<%= f.label :password_confirmation, "Confirm Password" %><br>
			<%= f.password_field :password_confirmation %>
			<br>

			<br>
			<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>			
			<%= button_tag "Cancel", name: "Cancel", :label => "Cancel", class: "btn btn-large btn-primary" %>  				
		<% end %>
	</div>
</div>

	